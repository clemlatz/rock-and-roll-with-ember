{{page-title "New author"}}
<h3 class="text-lg leading-6 font-medium text-gray-100">
  New author
</h3>
<div class="mt-6 grid grid-cols-1 row-gap-6 col-gap-4 sm:grid-cols-6">
  <div class="sm:col-span-4">
    <div class="mt-1 relative rounded-md shadow-sm">
      <input
        type="text"
        class="text-gray-800 bg-white rounded-md py-2 px-4 mr-2"
        placeholder="First name"
        value={{this.firstName}}
        {{on "input" this.updateFirstName}}
      />
      <input
        type="text"
        class="text-gray-800 bg-white rounded-md py-2 px-4 mr-2"
        placeholder="Last name"
        value={{this.lastName}}
        {{on "input" this.updateLastName}}
      />
      <button
        type="button"
        class="px-4 py-2 rounded bg-purple-600 shadow-md hover:shadow-lg hover:text-white"
        {{on "click" this.saveAuthor}}
      >
        Save
      </button>
    </div>
  </div>
</div>